datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Poll {
  createdAt   DateTime @default(now())
  createdBy   String?
  description String?
  id          String   @id @default(cuid())
  options     Option[]
  title       String?
  updatedAt   DateTime @updatedAt
}

model Option {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  poll      Poll?    @relation(fields: [pollId], references: [id])
  pollId    String?
  text      String?
  updatedAt DateTime @updatedAt
  votes     Json?
}
