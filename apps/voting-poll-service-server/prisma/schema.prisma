datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vote {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  option    Option?  @relation(fields: [optionId], references: [id])
  optionId  String?
  updatedAt DateTime @updatedAt
  voter     String?
}

model Option {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  poll      Poll?    @relation(fields: [pollId], references: [id])
  pollId    String?
  text      String?
  updatedAt DateTime @updatedAt
  votes     Vote[]
}

model Poll {
  createdAt   DateTime @default(now())
  createdBy   String?
  description String?
  id          String   @id @default(cuid())
  options     Option[]
  title       String?
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
